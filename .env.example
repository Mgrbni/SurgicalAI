# SurgicalAI Environment Configuration
# Copy this file to .env and configure your settings

# OpenAI Configuration (primary)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o
OPENAI_PROJECT=SurgicalAI
OPENAI_ORG=org_xxxx  # optional

# Anthropic Configuration (fallback)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Provider Selection (auto, openai, anthropic)
PROVIDER=auto

# Application Settings
OFFLINE_ANALYSIS=false
DEBUG=false
LOG_LEVEL=INFO
MAX_OUTPUT_TOKENS=1200
TIMEOUT_SECONDS=45

# Production Settings (set to true for production)
PRODUCTION=false

# Git info (automatically set by CI/CD)
VERSION=0.1.0
GIT_SHA=development

# Security (change in production)
SECRET_KEY=your-secret-key-change-in-production

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# NOTE: Never commit real API keys to version control

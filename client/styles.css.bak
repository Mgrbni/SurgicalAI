/* SurgicalAI web UI styles - Dark Theme */

:root {
  --bg-primary: #0B0F14;
  --bg-secondary: #1A1F26;
  --bg-accent: #252B34;
  --text-primary: #E7EEF5;
  --text-secondary: #B8C5D1;
  --accent-gold: #D4AF37;
  --accent-green: #2E7D32;
  --accent-red: #E4572E;
  --border-color: #3A424B;
  --shadow: rgba(0, 0, 0, 0.3);
}

* {
  box-sizing: border-box;
}

body {
  margin: 0;
  padding: 0;
  background-color: var(--bg-primary);
  color: var(--text-primary);
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  font-size: 14px;
  line-height: 1.6;
  min-height: 100vh;
}

h1, h2, h3 {
  font-weight: 600;
  color: var(--accent-gold);
  margin: 0 0 1rem 0;
}

h1 { font-size: 1.75rem; }
h2 { font-size: 1.25rem; }
h3 { font-size: 1rem; }

.warning-banner {
  background: var(--accent-red);
  color: white;
  text-align: center;
  padding: 0.5rem;
  font-weight: 600;
  font-size: 0.875rem;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem;
}

.header {
  text-align: center;
  margin-bottom: 2rem;
}

.main-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2rem;
  align-items: start;
}

.left-column, .right-column {
  background: var(--bg-secondary);
  border-radius: 12px;
  padding: 1.5rem;
  border: 1px solid var(--border-color);
}

.form-group {
  margin-bottom: 1rem;
}

.form-group label {
  display: block;
  margin-bottom: 0.5rem;
  font-weight: 500;
  color: var(--text-primary);
}

.form-group input[type="checkbox"] {
  margin-right: 0.5rem;
}

input, select {
  width: 100%;
  padding: 0.75rem;
  border: 1px solid var(--border-color);
  border-radius: 6px;
  background: var(--bg-accent);
  color: var(--text-primary);
  font-size: 14px;
  transition: border-color 0.2s, box-shadow 0.2s;
}

input:focus, select:focus {
  outline: none;
  border-color: var(--accent-gold);
  box-shadow: 0 0 0 2px rgba(212, 175, 55, 0.2);
}

input::placeholder {
  color: var(--text-secondary);
}

.drop-area {
  border: 2px dashed var(--border-color);
  border-radius: 8px;
  padding: 2rem;
  text-align: center;
  cursor: pointer;
  transition: all 0.2s;
  background: var(--bg-accent);
}

.drop-area:hover, .drop-area.highlight {
  border-color: var(--accent-gold);
  background: rgba(212, 175, 55, 0.1);
}

.drop-area.has-image {
  padding: 1rem;
}

.image-preview {
  max-width: 100%;
  height: auto;
  border-radius: 8px;
  display: none;
  box-shadow: 0 4px 12px var(--shadow);
}

button {
  width: 100%;
  padding: 0.75rem 1.5rem;
  background: var(--accent-gold);
  color: var(--bg-primary);
  border: none;
  border-radius: 6px;
  font-weight: 600;
  font-size: 14px;
  cursor: pointer;
  transition: all 0.2s;
}

button:hover:not(:disabled) {
  background: #C19B28;
  transform: translateY(-1px);
}

button:disabled {
  background: var(--border-color);
  color: var(--text-secondary);
  cursor: not-allowed;
  transform: none;
}

.disclaimer {
  font-size: 0.75rem;
  color: var(--text-secondary);
  margin-top: 0.5rem;
  text-align: center;
  font-style: italic;
}

.progress-steps {
  padding: 1rem;
  background: var(--bg-accent);
  border-radius: 6px;
  color: var(--text-secondary);
}

.results-section {
  margin-bottom: 1.5rem;
  padding: 1rem;
  background: var(--bg-accent);
  border-radius: 6px;
  border: 1px solid var(--border-color);
}

.section-title {
  margin-bottom: 0.75rem;
  padding-bottom: 0.5rem;
  border-bottom: 1px solid var(--border-color);
}

.probability-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.5rem;
  padding: 0.5rem;
  background: var(--bg-secondary);
  border-radius: 4px;
}

.probability-label {
  font-weight: 500;
  text-transform: capitalize;
}

.probability-bar {
  flex: 1;
  height: 20px;
  background: var(--bg-primary);
  border-radius: 10px;
  margin: 0 0.75rem;
  overflow: hidden;
}

.probability-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--accent-gold), var(--accent-green));
  border-radius: 10px;
  transition: width 0.5s ease-out;
}

.probability-value {
  font-weight: 600;
  min-width: 3rem;
  text-align: right;
}

.pill {
  display: inline-block;
  padding: 0.5rem 1rem;
  border-radius: 20px;
  font-weight: 600;
  text-transform: uppercase;
  font-size: 0.75rem;
}

.pill.proceed {
  background: var(--accent-green);
  color: white;
}

.pill.defer {
  background: var(--accent-red);
  color: white;
}

.thumbnails {
  display: flex;
  gap: 1rem;
  margin-bottom: 1rem;
}

.thumbnail {
  width: 80px;
  height: 80px;
  object-fit: cover;
  border-radius: 4px;
  border: 1px solid var(--border-color);
}

.downloads {
  display: flex;
  gap: 0.5rem;
}

.downloads a {
  padding: 0.5rem 1rem;
  background: var(--bg-primary);
  color: var(--text-primary);
  text-decoration: none;
  border-radius: 4px;
  border: 1px solid var(--border-color);
  font-size: 0.875rem;
  transition: background 0.2s;
}

.downloads a:hover {
  background: var(--bg-accent);
}

.toast {
  position: fixed;
  bottom: 2rem;
  right: 2rem;
  padding: 1rem 1.5rem;
  background: var(--accent-red);
  color: white;
  border-radius: 6px;
  box-shadow: 0 4px 12px var(--shadow);
  display: none;
  z-index: 1000;
}

.toast.show {
  display: block;
  animation: slide-up 0.3s ease-out;
}

@keyframes slide-up {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.footer {
  text-align: center;
  padding: 2rem;
  color: var(--text-secondary);
  font-size: 0.875rem;
  border-top: 1px solid var(--border-color);
  margin-top: 3rem;
}

/* Responsive Design */
@media (max-width: 768px) {
  .container {
    padding: 1rem;
  }
  
  .main-content {
    grid-template-columns: 1fr;
    gap: 1rem;
  }
  
  .left-column, .right-column {
    padding: 1rem;
  }
  
  .thumbnails {
    flex-wrap: wrap;
  }
  
  .downloads {
    flex-direction: column;
  }
}
